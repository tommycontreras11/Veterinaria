</body>
</html>

<script>

    var id_Mascota = new Array();
    var id_Tipo = new Array();
    var id_Raza = new Array();
    var tipo = new Array();
    var raza = new Array();

    $(document).ready(function () {
        listarMascota();
    });

    function listarMascota() {

        $.ajax({
            type: "GET",
            url: "/Mascota/listarMascota",
            dataType: "JSON",
            contentType: "application/json; charset=utf-8",
            cache: false,

            success: function (data) {

                for (let i = 0; i < data.length; i++) {
                    const mascota = data[i];
                    id_Mascota.push(mascota.id_Mascota);
                    id_Tipo.push(mascota.id_Tipo);
                    id_Raza.push(mascota.id_Raza);
                }

                $.ajax({
                    type: "GET",
                    url: "/TipoMascota/listarSoloTipoMascotaPorid_Tipo",
                    traditional: true,
                    data: { "id": id_Tipo },

                    success: function (dataTipo) {
                        for (let i = 0; i < dataTipo.length; i++) {
                            tipo.push(dataTipo[i]);
                        }

                        $.ajax({
                            type: "GET",
                            url: "/RazaMascota/listarSoloRazaMascotaPorid_Raza",
                            traditional: true,
                            data: { "id": id_Raza },

                            success: function (dataRaza) {
                                for (let i = 0; i < dataRaza.length; i++) {
                                    raza.push(dataRaza[i]);
                                }

                                let items = "";

                                items += "<table class='table table-bordered table-hover'>";
                                items += "<thead class='table-dark'>";
                                items += "<tr>";
                                items += "<th>id Usuario</th>";
                                items += "<th>Tipo</th>";
                                items += "<th>Raza</th>";
                                items += "<th>Nombre</th>";
                                items += "<th>Sexo</th>";
                                items += "<th>Peso</th>";
                                items += "<th>Foto</th>";
                                items += "<th>Fecha I</th>";
                                items += "<th>Fecha M</th>";
                                items += "<th>Editar</th>";
                                items += "<th>Eliminar</th>";
                                items += "</tr>";
                                items += "</thead>";
                                items += "<tbody>";

                                for (let i = 0; i < data.length; i++) {
                                    const mascota = data[i];

                                    items += "<tr>";
                                    items += "<td>" + mascota.id_Usuario + "</td>";
                                    items += "<td>" + tipo[i] + "</td>";
                                    items += "<td>" + raza[i] + "</td>";
                                    items += "<td>" + mascota.nombre_Completo + "</td>";
                                    items += "<td>" + mascota.sexo + "</td>";
                                    items += "<td>" + mascota.peso + "</td>";
                                    items += "<td><img src='/Mascota/getImage?id=" + id_Mascota[i] + "' width='50' heigth='50'/></td>";
                                    items += "<td>" + mascota.fecha_Ingreso + "</td>";
                                    items += "<td>" + mascota.fecha_Modificacion + "</td>";
                                    items += "<td><a href='Edit?id=" + mascota.id_Mascota + "' class='btn btn-warning'>Editar</a></td>";
                                    items += "<td><a href='Delete?id=" + mascota.id_Mascota + "' class='btn btn-danger'>Eliminar</a></td>";
                                    items += "</tr>";
                                }

                                items += "</tbody>";
                                items += "</table>";

                                $("#table").append(items);
                            },

                            error: function (error) {
                                alert("Ha ocurrido un error: " + error);
                            }
                        });
                    },

                    error: function (error) {
                        alert("Ha ocurrido un error: " + error);
                    }

                });

            },

            error: function (error) {
                alert("Ha ocurrido un error: " +  error);
            }
        });

    }

    //function listarTipoPorid_Tipo(id_Tipo) {

        

