<script>

    $(document).ready(function () {
        listarUsuario();
        listarTipoMascota();
        listarRazaMascota();
    });

    function listarUsuario() {

        $.ajax({
            type: "GET",
            url: "/Account/listarUsuarioPorid_Usuario",
            dataType: "JSON",
            contentType: "application/json; charset=utf-8",
            cache: false,

            success: function (data) {

                let items = "";
                alert(data);
                items += "<label>Usuario</label>";
                items += "<select class='form-select' name='usuario' aria-label='Default select example'>";

                items += "<option id='" + JSON.stringify(data.id_Usuario).replaceAll("\"", "") + "' value='" + JSON.stringify(data.id_Usuario).replaceAll("\"", "") + "'>" + JSON.stringify(data.nombre_Completo).replaceAll("\"", "") + "</option>";
                
                items += "</select>";

                $("#selectUsuario").append(items);
            },

            error: function (error) {
                alert("Ha ocurrido un error: " + error);
            }
        });

    }

    function listarTipoMascota() {

        $.ajax({
            type: "GET",
            url: "/TipoMascota/listarTipoMascota",
            dataType: "JSON",
            contentType: "application/json; charset=utf-8",
            cache: false,

            success: function (data) {

                let items = "";

                items += "<label>Tipo de mascota</label>";
                items += "<select class='form-select' name='tipoMascota' aria-label='Default select example'>";

                for (let i = 0; i < data.length; i++) {
                    const tipoMascota = data[i];
                    items += "<option id='" + tipoMascota.id_Tipo + "' value='" + tipoMascota.id_Tipo + "'> " + tipoMascota.tipo + " </option>";
                }

                items += "</select>";

                $("#selectTipo").append(items);
            },

            error: function (error) {
                alert("Ha ocurrido un error: " + error);
            }
        });

    }

    function listarRazaMascota() {

        $.ajax({
            type: "GET",
            url: "/RazaMascota/listarRazaMascota",
            dataType: "JSON",
            contentType: "application/json; charset=utf-8",
            cache: false,

            success: function (data) {

                let items = "";

                items += "<label>Raza de la mascota</label>";
                items += "<select class='form-select' name='razaMascota' aria-label='Default select example'>";

                for (let i = 0; i < data.length; i++) {
                    const raza = data[i];
                    items += "<option id='" + raza.id_Raza + "' value='" + raza.id_Raza + "'>" + raza.raza + "</option>";
                }

                items += "</select>";

                $("#selectRaza").append(items);

            },

            error: function (error) {
                alert("Ha ocurrido un error: " + error);
            }
        });

    }

</script>

