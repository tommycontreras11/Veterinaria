                                id_UsuarioCita.push(cita.id_Usuario);
                                id_UsuarioDoctor.push(cita.id_UsuarioVeterinario);
                            }

                            $.ajax({
                                type: "POST",
                                url: "/Mascota/listarTodoNombre_MascotaPorid_Usuario",
                                traditional: true,
                                data: { "id": id_UsuarioMascota },

                                success: function (mascota) {
                                    alert(mascota);
                                    $.ajax({
                                        type: "POST",
                                        url: "/Account/Proc_listarnombre_CompletoPorid_Usuario",
                                        traditional: true,
                                        data: { "id": id_UsuarioCita },

                                        success: function (usuario) {
                                            alert(usuario);
                                            $.ajax({
                                                type: "POST",
                                                url: "/Account/Proc_listarnombre_CompletoPorid_Usuario",
                                                traditional: true,
                                                data: { "id": id_UsuarioDoctor },

                                                success: function (doctor) {
                                                    alert(doctor);
