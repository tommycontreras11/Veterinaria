                                                    items += "<th>Mascota</th>";
                                                    items += "<th>Doctor</th>";
                                                    items += "<th>Servicio</th>";
                                                    items += "<th>Acciones</th>";
                                                    items += "</tr>";
                                                    items += "<thead>";
