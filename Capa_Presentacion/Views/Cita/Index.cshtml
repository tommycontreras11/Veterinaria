                    alert("No tienes");
                } else {

                    $.ajax({
                        type: "GET",
                        url: "/Cita/listarCitaPorid_Usuario",
                        dataType: "JSON",
                        contentType: "application/json; charset=utf-8",
                        cache: false,

                        success: function (cita) {
                            for (let i = 0; i < cita.length; i++) {
                                const citaUsuario = cita[i];
                                id_Usuario.push(citaUsuario.id_Usuario);
                                id_Doctor.push(citaUsuario.id_UsuarioVeterinario);
                            }

                            $.ajax({
                                type: "GET",
                                url: "/Cita/listarCitaPorfecha_Cita",
                                dataType: "JSON",
                                contentType: "application/json; charset=utf-8",
                                cache: false,

                                success: function (data) {

                                    if (data == "Aún no es el día de la cita o pasó") {
                                        alert(data);
                                    } else {
                                        $.ajax({
                                            type: "POST",
                                            url: "/Account/Proc_listarnombre_CompletoPorid_Usuario",
                                            traditional: true,
                                            data: { "id": id_Usuario },

                                            success: function (data_Usuario) {

                                                for (let i = 0; i < data_Usuario.length; i++) {
                                                    alert(data_Usuario[i]);
                                                }


                                                $.ajax({
                                                    type: "POST",
                                                    url: "/Account/Proc_listarnombre_CompletoPorid_Usuario",
                                                    traditional: true,
                                                    data: { "id": id_Doctor },

                                                    success: function (data_Doctor) {


                                                        let items = "";

                                                        items += "<div class='card text-center'>";
                                                        items += "<div class='card-header'>Información de la mascota</div>";
                                                        items += "<div class='card-body'>";

                                                        for (let i = 0; i < cita.length; i++) {
                                                            const citaUsuario = cita[i];

                                                            items += "<p class='card-text'>Usuario: " + data_Usuario[i] + "</p>";
                                                            items += "<p class='card-text'>Doctor: " + data_Doctor[i] + "</p>";
                                                            items += "<p class='card-text'>Servicio: " + citaUsuario.servicio + "</p>";
                                                            items += "<p class='card-text'>Fecha cita: " + citaUsuario.fecha_Cita + "</p>";
                                                            items += "<td><a href='Procesar?id=" + citaUsuario.id_Cita + "' class='btn btn-primary'>Ver cita</a></td>";
                                                        }
                                                        //DateTime.Now.ToString("dd/MM/yyyy HH:mm tt")
                                                        items += "</div>";
                                                        items += "<div class='card-footer text-muted'>2 days ago</div>";
                                                        items += "</div>";

                                                        $(".col-md-12").append(items);
                                                    },

                                                    error: function (error) {
                                                        alert("Ha ocurrido un error: " + error);
                                                    }
                                                });

                                            },

                                            error: function (error) {
                                                alert("Ha ocurrido un error: " + error);
                                            }
                                        });

                                    }
                                },

                                error: function (error) {
                                    alert("Ha ocurrido un error: " + error);
                                }
                            });

                        },

                        error: function (error) {
                            alert("Ha ocurrido un error: " + error);
                        }
                    });

                }
            },

            error: function (error) {
                alert("Ha ocurrido un error: " + error);
            }
        });

    }

    function listarTodaCitaPorfecha_Cita() {

        $.ajax({
            type: "GET",
            url: "/Cita/listarCitaPorfecha_Cita",
            dataType: "JSON",
