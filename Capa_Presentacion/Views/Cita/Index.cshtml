                                                    for (let i = 0; i < data.length; i++) {
                                                        const cita = data[i];

                                                        items += "<tr>";
                                                        items += "<td>" + usuario[i] + "</td>";
                                                        items += "<td>" + mascota[i] + "</td>";
                                                        items += "<td>" + doctor[i] + "</td>";
                                                        items += "<td>" + cita.servicio + "</td>";
                                                        items += "<td><a href='Procesar?id=" + cita.id_Cita + "' class='btn btn-primary'>Procesar</a></td>";
                                                        items += "</tr>";
                                                    }

                                                    items += "</tbody>";
                                                    items += "</table>";

                                                    $("#table").append(items);
                                                },

                                                error: function (error) {
                                                    alert("Ha ocurrido un error: " + error);
                                                }
                                            });

                                        },

                                        error: function (error) {
                                            alert("Ha ocurrido un error: " + error);
                                        }
                                    });

                                },

                                error: function (error) {
                                    alert("Ha ocurrido un error: " + error);
                                }
                            });

                        },

                        error: function (error) {
                            alert("Ha ocurrido un error: " + error);
                        }
                    });
                }
            },

            error: function (error) {
                alert("Ha ocurrido un error: " + error);
            }
        });

    }

