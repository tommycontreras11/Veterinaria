    function listarCitaPorid_Usuario() {

        $.ajax({
            type: "GET",
            url: "/Cita/listarCitaPorfecha_Cita",
            dataType: "JSON",
            contentType: "application/json; charset=utf-8",
            cache: false,

            success: function (comprobar_Cita) {

                if (comprobar_Cita == "Aún no es el día de la cita o pasó") {
                    document.getElementById("section").style = "display: none";
                    alert(comprobar_Cita);
                } else {
                    $.ajax({
                        type: "GET",
                        url: "/Cita/listarservicioPorid_Usuario_id_UsuarioVeterinario",
                        dataType: "JSON",
                        contentType: "application/json; charset=utf-8",
                        cache: false,

                        success: function (data_Servicio) {

                            if (data_Servicio == "Aún no tienes una cita") {
                                alert(data_Servicio);
                                window.location.href = "/Home";
                            } else {
                                $.ajax({
                                    type: "GET",
                                    url: "/Cita/listarCitaPorid_Usuario_id_UsuarioVeterinario",
                                    dataType: "JSON",
                                    contentType: "application/json; charset=utf-8",
                                    cache: false,

                                    success: function (data_Cita) {

                                        $.ajax({
                                            type: "GET",
                                            url: "/Account/listarid_UsuarioPorEmail",
                                            dataType: "JSON",
                                            contentType: "application/json; charset=utf-8",
                                            cache: false,

                                            success: function (data) {
                                                for (let i = 0; i < data_Cita.length; i++) {
                                                    const cita = data_Cita[i];
                                                    if (data == cita.id_Usuario || data == cita.id_UsuarioVeterinario) {
                                                        idUsuario.push(cita.id_Usuario);
                                                        idUsuario.push(cita.id_UsuarioVeterinario);

                                                        setScreen(true);

                                                        // Declare a proxy to reference the hub.
                                                        var chatHub = $.connection.chatHub;

                                                        registerClientMethods(chatHub);

                                                        // Start Hub
                                                        $.connection.hub.start().done(function () {

                                                            registerEvents(chatHub);

                                                        });

                                                    } else {
                                                        alert("No tiene cita");
                                                    }
                                                }

                                            },

                                            error: function (error) {
                                                alert("Ha ocurrido un error: " + error);
                                            }
                                        });

                                    },

                                    error: function (error) {
                                        alert("Ha ocurrido un error: " + error);
                                    }
                                });
                            }

                        },

                        error: function (error) {
                            alert("Ha ocurrido un error: " + error);
                        }

                    });

                }

            },

            error: function (error) {
                alert("Ha ocurrido un error: " + error);
            }
        });

    }

